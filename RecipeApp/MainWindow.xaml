<!--Front-end for MainWindow-->
<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="350" Width="400">

    <!--Button for Add Recipe and Recipe Details-->
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="AddRecipeButton" Content="Add Recipe" Click="AddRecipeButton_Click" Margin="10"/>
            <Button Name="RecipeDetailsButton" Content="Recipe Details" Click="RecipeDetailsButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
